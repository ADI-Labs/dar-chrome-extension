{
  "name": "Degree Audit Report Helper",
  "version": "1.0",
  "description": "Reformats the Degree Audit Reports (DAR) provided by Columbia's DAR services.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action" :
  {
    "default_title" : "Your revised DAR",
    "default_icon": "crown.png"
  },
  "permissions" : [
    "declarativeContent", "tabs", "https://ssol.columbia.edu/*"
  ],
  "manifest_version": 2,

  "content_scripts": 
  [
    {
      "matches": ["https://ssol.columbia.edu/*"],
      "js": ["format.js"],
      "run_at": "document_end"
    }
  ]
}
